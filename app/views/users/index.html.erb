<div class='container registration_page'>
	<div class='row register'>
		<div class='col-md-4'>
			<h2>Register</h2>
			<p id="notice"><%= notice %></p>
			<%= simple_form_for @user do |f| %>
			<%= f.input :first_name %>
			<%= f.input :last_name %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.input :password_confirmation %>
			<%= f.submit "Create user", :class => "btn btn-md btn-primary" %>
			<% end %>
		</div>
	</div>
	<div class='row register'>
		<p>Already a user?<%= link_to("Login", signin_path) %> here</p>
	</div>
</div>
